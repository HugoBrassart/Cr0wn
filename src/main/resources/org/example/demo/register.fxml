<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #161616;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.demo.RegisterController">
   <AnchorPane prefHeight="90.0" prefWidth="600.0" style="-fx-background-color: #550000;">
      <Label layoutX="25.0" layoutY="15.0" prefHeight="60.0" prefWidth="214.0" text="Inscription" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style" size="40.0"/>
         </font>
         <effect>
            <DropShadow/>
         </effect>
      </Label>
   </AnchorPane>
   <Label alignment="CENTER" layoutX="24.0" layoutY="142.0" text="Prenom" textFill="WHITE">
      <font>
         <Font name="Bookman Old Style" size="16.0"/>
      </font>
   </Label>
   <TextField fx:id="firstnameTextField" layoutX="24.0" layoutY="167.0" prefHeight="26.0" prefWidth="214.0"
              promptText="Prenom"/>
   <Label alignment="CENTER" layoutX="24.0" layoutY="275.0" text="Identifiant" textFill="WHITE">
      <font>
         <Font name="Bookman Old Style" size="16.0"/>
      </font>
   </Label>
   <TextField fx:id="usernameTextField" layoutX="24.0" layoutY="295.0" prefHeight="26.0" prefWidth="214.0"
              promptText="Identifiant"/>
   <Label alignment="CENTER" layoutX="24.0" layoutY="209.0" text="Nom" textFill="WHITE">
      <font>
         <Font name="Bookman Old Style" size="16.0"/>
      </font>
   </Label>
   <TextField fx:id="lastnameTextField" layoutX="24.0" layoutY="228.0" prefHeight="26.0" prefWidth="214.0"
              promptText="Nom"/>
   <PasswordField fx:id="setPasswordField" layoutX="311.0" layoutY="167.0" prefHeight="26.0" prefWidth="249.0"
                  promptText="*************"/>
   <Label alignment="CENTER" layoutX="310.0" layoutY="142.0" text="Mot de passe" textFill="WHITE">
      <font>
         <Font name="Bookman Old Style" size="16.0"/>
      </font>
   </Label>
   <PasswordField fx:id="confirmPasswordField" layoutX="311.0" layoutY="241.0" prefHeight="26.0" prefWidth="249.0"
                  promptText="*************"/>
   <Label alignment="CENTER" layoutX="311.0" layoutY="219.0" text="Confirmation du mot de passe" textFill="WHITE">
      <font>
         <Font name="Bookman Old Style" size="15.0"/>
      </font>
   </Label>
   <Button fx:id="registerButton" alignment="CENTER" layoutX="313.0" layoutY="291.0" mnemonicParsing="false"
           prefHeight="34.0" prefWidth="97.0" style="-fx-background-color: #550000;" text="S'inscrire" textFill="WHITE">
      <font>
         <Font size="14.0"/>
      </font>
   </Button>
   <Button fx:id="closeButton" alignment="CENTER" layoutX="463.0" layoutY="291.0" mnemonicParsing="false"
           prefHeight="34.0" prefWidth="97.0" style="-fx-background-color: #550000;" text="Retour" textFill="WHITE">
      <font>
         <Font size="14.0"/>
      </font>
   </Button>
</AnchorPane>
